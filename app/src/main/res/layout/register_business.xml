<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my"
        android:textSize="30dp"
        android:text="Business register"
        android:textColor="@color/white"
        android:padding="6dp"
        android:layout_margin="5dp"
        />



    <EditText
        android:id="@+id/edtbemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:hint="Email"
        android:padding="15dp"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/edtbname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:hint="Business name"
        android:padding="15dp"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/edtbid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:hint="Bussiness ID(six digit)"
        android:padding="15dp"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/edtbaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:hint="Address"
        android:padding="15dp"
        android:textSize="20dp"
        />




    <EditText
        android:id="@+id/edtbpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:hint="Password"
        android:padding="15dp"
        android:textSize="20dp"
        />



    <Button
        android:id="@+id/btnbregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Register"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"

        />

    <Button
        android:id="@+id/btnblogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:background="@color/white"
        />



</LinearLayout>